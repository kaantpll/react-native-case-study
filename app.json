{
  "expo": {
    "name": "sevenapps-react-native-case-study",
    "slug": "sevenapps-react-native-case-study",
    "version": "1.0.0",
    "scheme": "sevenapps-react-native-case-study",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to help create a task with an image."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kaantpll.sevenapps-react-native-case-study",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to help create a task with an image.",
        "NSCameraUsageDescription": "This app uses the camera to take photos for your tasks."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.kaantpll.sevenappsreactnativecasestudy"
    }
  }
}
